<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:padding="0dp"
   android:background="#CCFFCC" > 

<LinearLayout 
    
     android:layout_height="830dp"
     android:layout_width="match_parent"     
     android:orientation="vertical"     
     android:background="#CCFFCC"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
     >

    <!-- android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" -->
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >  

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCFFCC"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
     >
    <TextView
        android:id="@+id/tvSimulationHeap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"    
        android:text="@string/simulation"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="60" />

    <TextView
        android:id="@+id/tvAlgorithmHeap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/algorithm"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:weightSum="100">

    <com.android.databluesv5.drawHeap
        android:id="@+id/svHeap"
        android:layout_width="255dp"
        android:layout_height="220dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tvAlgoWriteHeap"
        android:layout_width="match_parent"
        android:layout_height="90dp"       
        android:gravity="bottom"
        android:maxLines="100"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:textSize="13sp" />

     <TextView
        android:id="@+id/tvNoticeHeap"
        android:layout_width="wrap_content"
        android:layout_height="80dp"        
        android:maxLines="100"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text="@string/heapNot"
        android:textColor="#FF0000"
        android:textSize="12sp" />
     
   
  
<LinearLayout
        android:id="@+id/UserInput"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="3dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <EditText
            android:id="@+id/etInputHeap"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:layout_weight="80"
            android:inputType="textUri|number"
			android:digits="0123456789," />

         <Button
            android:id="@+id/btnPlayHeap"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableBottom="@drawable/play"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:layout_weight="20" />

    </LinearLayout>
    
 </LinearLayout>
 
 </LinearLayout>
 </LinearLayout>
 </ScrollView>
</LinearLayout>
</LinearLayout>

