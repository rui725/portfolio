<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"     
     android:background="#CCFFCC" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="830dp"
         android:orientation="vertical" >

<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    
    >
<LinearLayout        
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCFFCC" 
    android:orientation="vertical" 
   
    >
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >
 <TextView
        android:id="@+id/tvSimulationTrees"
        android:layout_width="185dp"
        android:layout_height="wrap_content"        
        android:layout_marginLeft="20dp"
        android:text="@string/simulation"
        android:textAppearance="?android:attr/textAppearanceLarge" />
 <TextView
        android:id="@+id/tvAlgorithmTrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="@string/algorithm"
        android:textAppearance="?android:attr/textAppearanceLarge" />
 </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="100"
    >
    <com.android.databluesv5.drawtrees
        android:id="@+id/svTrees"
        android:layout_width="0dp"
        android:layout_height="320dp"
           android:layout_gravity="left"     
           android:layout_weight="60"
         />
     <TextView
        android:id="@+id/tvWriteAlgoTrees"
        android:layout_width="0dp"
        android:layout_height="320dp"        
        android:gravity="bottom"
        android:layout_weight="40"
        android:maxLines="100"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="12sp" />
</LinearLayout>
    
    
   
<TextView
        android:id="@+id/tvNoticeTrees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:maxLines="100"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text="@string/treesNot"
        android:textColor="#FF0000"
        android:textSize="12sp" />
    

    <LinearLayout
        android:id="@+id/UserInput"
        android:layout_width="match_parent"
        android:layout_height="55dp"            
        android:background="@android:color/white"
        android:gravity="start"
        android:orientation="horizontal" 
        >

        <EditText
            android:id="@+id/etTrees"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:inputType="numberSigned"
            android:digits="0123456789-"
            android:layout_gravity="left"
            android:ems="10" 
            android:layout_weight=".8"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:layout_weight=".05" >

        <Button
            android:id="@+id/bAddTrees"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:drawableBottom="@drawable/add"
        	android:scaleType="centerCrop"
        	android:background="#FFFFFF" />
        <Button
            android:id="@+id/bDel"           
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"            
            android:layout_height="50dp"
            android:text="@null"
            android:visibility="gone" />
        <Button
            android:id="@+id/bResetTrees"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:drawableBottom="@drawable/reset"
        	android:scaleType="centerCrop"
        	android:background="#FFFFFF" />
   </LinearLayout>     
        
    </LinearLayout>

    

</LinearLayout>
</ScrollView>
</LinearLayout>
</LinearLayout>